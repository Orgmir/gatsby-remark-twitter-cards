{
  "name": "gatsby-remark-social-image-cards",
  "version": "0.0.1",
  "description": "Remark plugin for generating social card graphics.",
  "repository": "https://github.com/alessbell/gatsby-remark-social-cards",
  "author": "Alessia Bellisario",
  "license": "MIT",
  "private": false,
  "keywords": [
    "gatsby",
    "gatsby-plugin",
    "remark",
    "social",
    "sharing",
    "twitter",
